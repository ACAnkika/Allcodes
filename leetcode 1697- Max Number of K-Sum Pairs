#include <vector>
#include <unordered_map>
using namespace std;

class Solution {
public:
    int maxOperations(vector<int>& nums, int k) {
        unordered_map<int, int> freq;
        int count = 0;

        for (int num : nums) {
            int need = k - num;

            if (freq[need] > 0) {
                count++;
                freq[need]--;
            } else {
                freq[num]++;
            }
        }
        return count;
    }
};
